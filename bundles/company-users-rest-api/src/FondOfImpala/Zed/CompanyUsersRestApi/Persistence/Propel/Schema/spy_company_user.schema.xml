<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\CompanyUser\Persistence"
          package="src.Orm.Zed.CompanyUser.Persistence">

    <table name="spy_company_user" phpName="SpyCompanyUser">
        <column name="company_user_reference" required="false" type="VARCHAR" size="255" />
        <unique name="spy_company_user-company_user_reference">
            <unique-column name="company_user_reference"/>
        </unique>

        <unique name="spy_company_user-unique-keys">
            <unique-column name="fk_company"/>
            <unique-column name="fk_company_business_unit"/>
            <unique-column name="fk_customer"/>
        </unique>
    </table>
</database>
