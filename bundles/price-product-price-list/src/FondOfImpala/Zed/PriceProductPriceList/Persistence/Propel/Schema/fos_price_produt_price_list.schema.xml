<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\PriceProductPriceList\Persistence"
          package="src.Orm.Zed.PriceProductPriceList.Persistence">

    <table name="fos_price_product_price_list">
        <column name="id_price_product_price_list" type="BIGINT" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="fk_price_product_store" type="BIGINT" required="true"/>
        <column name="fk_price_list" type="INTEGER" required="true"/>
        <column name="fk_product" type="INTEGER"/>
        <column name="fk_product_abstract" type="INTEGER"/>

        <foreign-key name="fos_price_product_price_list-fk_price_product_store" foreignTable="spy_price_product_store" phpName="PriceProductStore" refPhpName="PriceProductPriceList">
            <reference local="fk_price_product_store" foreign="id_price_product_store"/>
        </foreign-key>

        <foreign-key name="fos_price_product_price_list-fk_p_l" foreignTable="fos_price_list" onDelete="CASCADE" phpName="PriceList" refPhpName="PriceProductPriceList">
            <reference local="fk_price_list" foreign="id_price_list"/>
        </foreign-key>

        <foreign-key name="fos_price_product_price_list-fk_product" foreignTable="spy_product" onDelete="CASCADE" phpName="Product" refPhpName="PriceProductPriceList">
            <reference local="fk_product" foreign="id_product"/>
        </foreign-key>

        <foreign-key name="fos_price_product_price_list-fk_product_abstract" foreignTable="spy_product_abstract" onDelete="CASCADE" phpName="ProductAbstract" refPhpName="PriceProductPriceList">
            <reference local="fk_product_abstract" foreign="id_product_abstract"/>
        </foreign-key>

        <index name="fos_price_product_price_list-index-fk_p_a">
            <index-column name="fk_product_abstract"/>
        </index>

        <index name="fos_price_product_price_list-index-fk_product">
            <index-column name="fk_product"/>
        </index>

        <index name="fos_price_product_price_list-index-fk_p_l-fk_p_p_s">
            <index-column name="fk_price_list"/>
            <index-column name="fk_price_product_store"/>
        </index>

        <index name="fos_price_product_price_list-fk_price_product_store">
            <index-column name="fk_price_product_store"/>
        </index>

        <id-method-parameter value="fos_price_product_price_list_pk_seq"/>

        <behavior name="event">
            <parameter name="fos_price_product_price_list_all" column="*"/>
        </behavior>
    </table>

</database>